<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/background_image"
        android:src="@drawable/background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="background"
        app:layout_constraintTop_toTopOf="@id/register_layout"
        app:layout_constraintLeft_toLeftOf="@id/register_layout"
        app:layout_constraintRight_toRightOf="@id/register_layout"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/register_name"
        style="@style/textEdit"
        android:text="Full name"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/background_image"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/register_email"
        style="@style/textEdit"
        android:text="Valid Email"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/register_name"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/register_phone_number"
        style="@style/textEdit"
        android:text="Phone number"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/register_email"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/register_password"
        style="@style/textEdit"
        android:text="Strong password"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/register_phone_number"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        style="@style/button"
        android:id="@+id/register_button"
        android:text="Next >"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>